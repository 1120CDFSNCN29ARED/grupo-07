<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/modificationListProducts.css" />
</head>

<body>
  <%- include ("./../partials/header.ejs") %>
    <main>
      <div class="titulo-main">
        <h1>Modificación lista de Productos</h1>
      </div>
      <div class="agregar">
        <button><a href="/products/productsAdd/<%= productsList.id %>"></a><i class="fas fa-check-circle"></i>Agregar producto</a></button>
      </div>

      <section class="lista-productos">
        <article class="contenedor-productos">
          <% for (let i=0; i < productsList.length; i++) { %>
            <div class="producto">
                <img src= "<%= productsList[i].picture %>" width="160" height="260" />
          
            <div class="detalle">
              <h2>Nombre</h2>
              <p>
                <%= productsList[i].name %>
              </p>
              <h2>Precio</h2>
              <p>
                <%= productsList[i].price %>
              </p>
              <h2>Descuento</h2>
              <p>
                <%= productsList[i].discount %>
              </p>
              <h2>Peso</h2>
              <p>
                <%= productsList[i].weight %>
              </p>
              <h2>Cantidad</h2>
              <p>
                <%= productsList[i].quantity %>
              </p>
              <h2>Descripción</h2>
              <p>
                <%= productsList[i].description%>
              </p>
              <h2>Categorías</h2>
              <p>
                <%= productsList[i].category %>
              </p>
            </div>
            <div class="modificar">
              <button><i class="fas fa-clipboard-list"><a href="/products/productsAdd/<%= productsList[i].id %>"></i>Modificar</a></button>
              <form action="/products/modificationListProducts/<%= productsList[i].id %>?_method=DELETE" method="POST">
                <button type="submit"><i class="fas fa-times-circle"></i>Eliminar</button>
              </form>
              </div> 
            </div>
            <% } %>
        </article>
    </main>
    <%- include("./../partials/footer.ejs") %>
</body>

</html>