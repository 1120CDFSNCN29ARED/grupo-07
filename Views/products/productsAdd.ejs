<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <%- include ("./../partials/header.ejs") %>

    <main class="main-container">
      <h2 class="title">Agregar o modificar productos</h2>
      <form
        action="/"
        method="POST"
        enctype="multipart/form-data"
        class="form-menu"
      >
        <div class="form-item">
          <label for="name" class="fomr-label">Nombre del producto</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-input"
            required
          />
        </div>
        <div class="form-item">
          <label for="picture" class="form-label">Foto</label>
          <input type="file" name="picture" id="picture" class="form-input" />
        </div>
        <div class="form-item">
          <label for="price">Precio</label>
          <input
            type="text"
            name="price"
            id="price"
            class="form-input"
            required
          />
        </div>
        <div class="form-item">
          <label for="price">Descuento</label>
          <input
            type="text"
            name="discount"
            id="discount"
            class="form-input"
            required
          />
        </div>
        <div class="form-item">
          <label for="price">Cantidad</label>
          <input
            type="text"
            name="quantity"
            id="quantity"
            class="form-input"
            required
          />
        </div>
        <div class="form-item">
          <label for="price">Peso</label>
          <input
            type="text"
            name="weight"
            id="weight"
            class="form-input"
            required
          />
        </div>
        <div class="form-item">
          <label for="brand" class="form-label">Marca</label>
          <input type="text" name="brand" id="brand" class="form-input" />
        </div>
        <div class="form-item">
          <label for="description" class="form-label">Descripción</label>
          <input
            type="text"
            name="description"
            id="description"
            class="form-input description"
          />
        </div>
        <div class="form-item">
          <p class="form-label">Categorías de estilos de alimentación</p>
          <div class="check-box">
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="tacc"
                class="form-input checkbox"
              />
              <label for="tacc">Sin tacc</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="sodio"
                class="form-input checkbox"
              />
              <label for="sodio" class="form-label">Bajo en sodio</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label">Sin lactosa</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label"
                >Sin azúcar agregada</label
              >
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label">Orgánico</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="vegan"
                class="form-input checkbox"
              />
              <label for="vegan" class="form-label">Apto vegano</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="vegetariano"
                class="form-input checkbox"
              />
              <label for="vegetariano" class="form-label">Vegetariano</label>
            </div>
            <p class="form-label">Categorías de alimentos</p>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="postre"
                class="form-input checkbox"
              />
              <label for="postre" class="form-label">Postre</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label">Snacks</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label"
                >Untables y Conservas</label
              >
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label">Pastas y Harinas</label>
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label"
                >Bebibles e Infusiones</label
              >
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label"
                >Cereales, Granolas y Frutos secos</label
              >
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label"
                >Legumbres y Semillas</label
              >
            </div>
            <div class="check">
              <input
                type="checkbox"
                name="category"
                id="galleta"
                class="form-input checkbox"
              />
              <label for="galleta" class="form-label">Congelados</label>
            </div>
          </div>
        </div>
        <button type="submit" class="search-btn">Guardar</button>
        <button class="search-btn" type="button" disabled>
          <span class="spinner-grow" role="status" aria-hidden="true"></span>
          Guardando...
        </button>
      </form>
    </main>
    <%- include("./../partials/footer.ejs") %>
  </body>
</html>
